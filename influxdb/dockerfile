FROM	alpine:latest

RUN	apk update && apk add influxdb

COPY	srcs/init/init.sh /tmp/
COPY	srcs/influxdb/influxdb.conf /etc/influxdb.conf
COPY	srcs/init/db.conf /tmp/db.conf
RUN	influxd & until (influx < /tmp/db.conf) do (echo coucou) done

EXPOSE	8086

CMD	["/tmp/init.sh"]
