FROM	alpine:3.12

RUN	apk update && apk upgrade && apk add influxdb
RUN	mkdir -p /etc/telegraf

COPY	srcs/init/init.sh	/tmp/
COPY	srcs/init/db.conf	/tmp/db.conf

EXPOSE	8086

CMD	["/tmp/init.sh"]
